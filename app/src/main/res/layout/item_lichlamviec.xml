<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/khung_test"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txttenNV_itLLV"
                android:text="Tên nhân viên"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:textColor="#070707"/>
            <TextView
                android:id="@+id/txtngaybatdau_itLLV"
                android:text="ngày bắt đầu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:textColor="#070707"/>
            <TextView
                android:id="@+id/txtca_itLLV"
                android:text="ca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:textColor="#070707"/>
            <TextView
                android:id="@+id/txtghichu_itLLV"
                android:text="ghi chú"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:textColor="#070707"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnupdate_itLLV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:backgroundTint="#558B2F"
                    />
                <Button
                    android:id="@+id/btndelete_itLLV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/white"
                    android:backgroundTint="#F44336"
                    android:text="Delete"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>