<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/khungnv"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/hoTenLichKhachHang_itLDKH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên: "
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/dichVuLichKhachHang_itLDKH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dịch vụ :"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"/>
            <!-- Hiển thị thông tin Ngày đặt -->
            <TextView
                android:id="@+id/ngayDatLichKhachHang_itLDKH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày đặt: 2023/12/01"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"/>

            <!-- Hiển thị thông tin Giờ đặt -->
            <TextView
                android:id="@+id/gioDatLichKhachHang_itLDKH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giờ đặt: 14:30"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"/>

            <!-- Hiển thị thông tin Phương thức thanh toán -->
            <TextView
                android:id="@+id/ptttLichKhachHang_itLDKH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PTTT: Thanh toán khi nhận dịch vụ"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"/>

            <!-- Hiển thị thông tin Trạng thái -->
            <TextView
                android:id="@+id/trangThaiLichKhachHang_itLDKH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Đã xác nhận"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"/>

            <!-- Hiển thị thông tin Ghi chú -->
            <TextView
                android:id="@+id/ghiChuLichKhachHang_itLDKH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú: Đặt lịch trước 1 ngày"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"/>

            <!-- Hiển thị thông tin Feedback -->
            <TextView
                android:id="@+id/feedbackLichKhachHang_itLDKH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback: Sản phẩm tốt, dịch vụ chuyên nghiệp"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginRight="50dp"
                    android:text="Xác nhận"
                    android:id="@+id/btnxacnhan_itLDKH"/>

                <Button
                    android:id="@+id/btnhuy_itLDKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hủy"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btndanhgia_itLDKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>